#include <iostream>

int main() {
    // Введення значення x
    double x;
    std::cout << "Введіть значення x: ";
    std::cin >> x;

    // Спосіб 1: Використання команд розгалуження в скороченій формі
    double y1;

    if (x <= 0)
        y1 = -x;
    else if (x > 0 && x <= 1)
        y1 = x * x;
    else
        y1 = x;

    // Виведення результату для способу 1
    std::cout << "Спосіб 1: Значення y = " << y1 << std::endl;

    // Спосіб 2: Використання команд розгалуження в повній формі
    double y2;

    if (x <= 0) {
        y2 = -x;
    } else {
        if (x <= 1) {
            y2 = x * x;
        } else {
            y2 = x;
        }
    }

    // Виведення результату для способу 2
    std::cout << "Спосіб 2: Значення y = " << y2 << std::endl;

    return 0;
}
      
